{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "module": "commonjs",
    "noEmit": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "./src/**/*",
    "./*"
  ]
}
